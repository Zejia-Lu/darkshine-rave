#! /bin/sh
# clhep-config.  Generated from clhep-config.in by configure.


prefix=/afs/cern.ch/sw/lcg/external/clhep/2.0.4.4/x86_64-slc5-gcc43-opt
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
    cat  <<EOF
Usage: clhep-config [OPTION]

Known values for OPTION are:

  --prefix              show installation prefix
  --cxx                 print C++ compilation command
  --cpp                 print pre-processor commands
  --include             print include path
  --ldflags             print linker flags
  --libs                print libraries to link against
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*)
        optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) 
        optarg=
	;;
    esac

    case "$1" in
    --prefix)
	echo /afs/cern.ch/sw/lcg/external/clhep/2.0.4.4/x86_64-slc5-gcc43-opt
	;;

    --version)
	echo CLHEP 2.0.4.4
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxx)
       	echo g++  -O -ansi -pedantic -Wall -D_GNU_SOURCE 
       	;;

    --cpp)
       	echo g++ -E 
       	;;

    --include)
       	echo -I/afs/cern.ch/sw/lcg/external/clhep/2.0.4.4/x86_64-slc5-gcc43-opt/include
       	;;

    --ldflags)
       	echo    
       	;;

    --libs)
       	echo -L/afs/cern.ch/sw/lcg/external/clhep/2.0.4.4/x86_64-slc5-gcc43-opt/lib -lCLHEP-2.0.4.4 
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
